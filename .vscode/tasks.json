{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile", 
        "command": "g++", 
        "args": [
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe",
          "-Wall",
          "-Wextra",
          "-g",
          "\"-Wl,--stack,419430400\"",
          "-fsigned-char",
          "-std=gnu++17",
          "-D_GLIBCXX_DEBUG",
          "-fsanitize=undefined",
          "-fsanitize-undefined-trap-on-error"
        ], 
        "type": "shell", 
        "group": {
          "kind": "build",
          "isDefault": true 
        },
        "presentation": {
          "echo": true,
          "reveal": "always", 
          "focus": false, 
          "panel": "shared" 
        }
        // "problemMatcher":"$gcc" 
      }
    ]
  }